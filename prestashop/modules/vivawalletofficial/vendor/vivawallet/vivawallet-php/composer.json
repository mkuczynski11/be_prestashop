{
    "name": "vivawallet/vivawallet-php",
    "description": "Package to handle http requests to Viva Wallet APi for native checkout",
    "version": "1.0.5",
    "type": "library",
    "require": {
        "php": ">=7.2.0",
        "php-curl-class/php-curl-class": "8.9.0",
        "guzzlehttp/guzzle": "7.2.0",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "v2.18.7",
        "squizlabs/php_codesniffer": "3.4.0",
        "phpunit/phpunit": "9.0.2"
    },
    "license": "GPL-3.0-or-later",
    "homepage": "https://www.vivawallet.com",
    "authors": [
        {
            "name": "Miguel Valdepenas",
            "email": "mvaldepenas@vivawallet.com"
        }
    ],
    "minimum-stability": "dev",
    "keywords": [
        "native checkout",
        "payments",
        "Viva Wallet",
        "Vivapayments"
    ],
    "support": {
        "wiki": "https://developer.vivawallet.com/"
    },
    "autoload": {
        "psr-4": {
            "VivaWallet\\": "lib",
            "VivaWallet\\UnitTestFiles\\": "UnitTestFiles"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
